<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.patiala">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/patt"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/patt"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Hotels"
            android:label="Hotels" >
        </activity>
        <activity
            android:name=".Restaurants"
            android:label="Restaurants" />
        <activity
            android:name=".Shop"
            android:label="Shopping Hub" />
        <activity
            android:name=".Attractions"
            android:label="Public Attractions" />
        <activity android:name=".Description" />
    </application>

</manifest>